<div class="main-container">
  <h1 class="main-title">Ironhack Cinema</h1>
  <h2>Click on the movie to check the showtimes</h2>

  <div class="movies-container">
    {{#each movies}}
      <div class="movie-card">
        <img src="{{image}}" alt="" class="movie-img">
        <h3 class="movie-title">{{title}}</h3>
        <a href="/movies/{{_id}}" class="movie-link">See more</a>
      </div>
    {{/each}}
  </div>
</div>